{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": [
    "react-app",
    "prettier",
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/strict",
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended"
  ],
  "plugins": [
    "jsx-a11y",
    "react-hooks",
    "react",
    "@typescript-eslint",
    "prettier",
    "jest-dom",
    "testing-library"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "react/react-in-jsx-scope": 0
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  }
}
